{
  "strict": true,
  "compilerOptions": {
      "module": "commonjs",
      "lib": ["es2015", "dom"],
      "target": "es5",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "types": [],
      "outDir": "./lib"
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}
